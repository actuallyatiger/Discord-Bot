{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2019
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["warn", "double"],
    "no-console": "off",
    "indent": ["error", 2],
    "no-var": "error",
    "prefer-const": "error",
    "space-before-function-paren": ["error", "never"],
    "spaced-comment": ["error", "always"],
    "yoda": "error",
    "space-in-parens": "error",
    "space-infix-ops": "error",
    "space-unary-ops": "error"
  }
}
